# GitHub App Configuration
# You can use either CONTRIBUTOR_APP_* or GITHUB_APP_* variables
# CONTRIBUTOR_APP_* takes precedence if both are set
CONTRIBUTOR_APP_ID=your_app_id
CONTRIBUTOR_APP_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_here\n-----END RSA PRIVATE KEY-----"

# Alternative naming (legacy support)
GITHUB_APP_ID=your_app_id
GITHUB_APP_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_here\n-----END RSA PRIVATE KEY-----"

# Webhook secret (required)
GITHUB_APP_WEBHOOK_SECRET=your_webhook_secret

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key

# Server Configuration
PORT=8080
NODE_ENV=production

# Continue AI Configuration (required for continue-review handler)
CONTINUE_API_KEY=your_continue_api_key

# Optional (defaults shown) - only override if using custom Continue setup
CONTINUE_ORG=continuedev
CONTINUE_CONFIG=continuedev/review-bot