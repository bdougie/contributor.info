{
  "importMap": "./import_map.json",
  "compilerOptions": {
    "lib": ["deno.window", "deno.ns"]
  },
  "tasks": {
    "test": "deno test --allow-all --coverage=coverage _shared/ tests/",
    "test:watch": "deno test --allow-all --watch",
    "coverage": "deno coverage coverage --lcov --output=coverage/lcov.info",
    "lint": "deno lint",
    "fmt": "deno fmt",
    "fmt:check": "deno fmt --check"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-explicit-any", "no-unused-vars", "require-await"]
    },
    "include": [
      "_shared/**/*.ts",
      "tests/**/*.ts",
      "health/index.ts"
    ],
    "exclude": [
      "_shared/spam-detection-integration.ts"
    ]
  },
  "exclude": [
    "_shared/spam-detection-integration.ts"
  ],
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "semiColons": true,
    "singleQuote": true
  }
}
